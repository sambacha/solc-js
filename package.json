{
  "name": "solc",
  "version": "0.8.13",
  "description": "Solidity compiler",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "bin": {
    "solcjs": "solc.js"
  },
  "scripts": {
    "build": "tsc",
    "postbuild": "node build/postbuild.js",
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "updateBinary": "node build/clean.js && ts-node ./downloadCurrentVersion.ts && ts-node ./verifyVersion.ts",
    "prepack": "node build/pack-publish-block.js",
    "build:tarball": "npm run updateBinary && npm run build && BYPASS_SAFETY_CHECK=true npm pack ./dist",
    "publish:tarball": "tarball=$(npm run --silent tarballName) && ls \"$tarball\" && BYPASS_SAFETY_CHECK=true npm publish \"$tarball\"",
    "tarballName": "jq --raw-output '.name + \"-\" + .version + \".tgz\"' package.json",
    "copyTestFiles": "cp -r ./test/resources ./dist/test/",
    "pretest": "npm run lint && npm run build && npm run copyTestFiles",
    "test": "cd dist && tape ./test/index.js",
    "coverage": "nyc npm run test",
    "coveralls": "npm run coverage && coveralls <coverage/lcov.info"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ethereum/solc-js.git"
  },
  "keywords": [
    "ethereum",
    "solidity",
    "compiler"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "files": [
    "abi.js",
    "index.js",
    "linker.js",
    "smtchecker.js",
    "smtsolver.js",
    "solc.js",
    "soljson.js",
    "translate.js",
    "wrapper.js"
  ],
  "author": "chriseth",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ethereum/solc-js/issues"
  },
  "homepage": "https://github.com/ethereum/solc-js#readme",
  "dependencies": {
    "command-exists": "^1.2.8",
    "commander": "^8.1.0",
    "follow-redirects": "^1.12.1",
    "js-sha3": "0.8.0",
    "memorystream": "^0.3.1",
    "semver": "^7.3.7",
    "solc": "^0.8.13",
    "tmp": "0.0.33"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/plugin-proposal-class-properties": "^7.16.7",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.16.7",
    "@babel/plugin-transform-runtime": "^7.17.10",
    "@babel/plugin-transform-typescript": "^7.16.8",
    "@babel/preset-typescript": "^7.16.7",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/node": "^14",
    "@types/semver": "^7.3.9",
    "@types/tape": "^4.13.2",
    "@types/tmp": "^0.2.3",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "coveralls": "^3.0.0",
    "downlevel-dts": "^0.10.0",
    "esbuild": "^0.14.38",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.1",
    "nyc": "^15.1.0",
    "rollup": "^2.71.1",
    "rollup-plugin-dts": "^4.2.1",
    "rollup-plugin-esbuild": "^4.9.1",
    "tape": "^4.11.0",
    "tape-spawn": "^1.4.2",
    "ts-node": "^10.4.0",
    "tslib": "^2.4.0",
    "typescript": "4.6.3"
  },
  "nyc": {
    "exclude": [
      "soljson.js",
      "dist"
    ]
  }
}
